{
    "name": "karnoweb/livewire-datepicker",
    "description": "Jalali/Gregorian datepicker for Livewire 3 with Alpine.js",
    "version": "1.0.0",
    "keywords": ["laravel", "livewire", "datepicker", "jalali", "persian", "alpine"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "livewire/livewire": "^3.0",
        "morilog/jalali": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Karnoweb\\LivewireDatepicker\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Karnoweb\\LivewireDatepicker\\DatepickerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
